{
  "name": "specifai",
  "version": "0.0.1",
  "private": true,
  "description": "Voice-to-GitHub-Issue Platform",
  "scripts": {
    "dev": "pnpm --parallel --recursive run dev",
    "dev:web": "pnpm --filter web run dev",
    "build": "pnpm --recursive run build",
    "build:replit": "cd packages/web && pnpm run build",
    "start": "cd packages/web && pnpm run preview --host 0.0.0.0 --port 3000",
    "preview": "cd packages/web && pnpm run preview",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "prepare": "node -e \"if(process.env.HUSKY === '0' || process.env.NODE_ENV === 'production') process.exit(0)\" || husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
