# Replit Configuration for SpecifAI

hidden = [".git", "node_modules", ".env", ".env.local", ".cache", "dist", ".vite"]

# Development run command
run = "npm run start"

# Production deployment configuration
[deployment]
build = ["sh", "-c", "npm install -g pnpm@8 && pnpm install --frozen-lockfile && npm run build:replit"]
run = ["sh", "-c", "npm run start"]
deploymentTarget = "cloudrun"

[nix]
channel = "stable-24_05"

[env]
NODE_ENV = "production"
SKIP_HUSKY = "true"
HUSKY = "0"

[[ports]]
localPort = 3000
externalPort = 80

[packager]
language = "nodejs-npm"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false