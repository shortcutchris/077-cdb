# Replit Configuration for SpecifAI

hidden = [".git", "node_modules", ".env", ".env.local", ".cache", "dist", ".vite"]

# Development run command
run = "npm run start:dev"

# Production deployment configuration
[deployment]
build = ["sh", "-c", "npm ci --prefer-offline --no-audit --legacy-peer-deps && npm install -w packages/web vite && npm run build"]
run = ["sh", "-c", "cd packages/web && npm run preview -- --host 0.0.0.0 --port 3000"]
deploymentTarget = "static"

[nix]
channel = "stable-24_05"

[env]
NODE_ENV = "production"
SKIP_HUSKY = "true"
HUSKY = "0"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 5174

[packager]
language = "nodejs-npm"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = true