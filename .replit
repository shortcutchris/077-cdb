# Replit Configuration for SpecifAI Monorepo

hidden = [".git", "node_modules", ".env", ".env.local", ".cache", "dist", ".vite", "pnpm-lock.yaml"]

# Direkt in packages/web arbeiten
run = """
  cd packages/web
  npm install
  npm run dev -- --host 0.0.0.0 --port 3000
"""

[nix]
channel = "stable-24_11"

[env]
NODE_ENV = "development"
SKIP_HUSKY = "true"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5174
externalPort = 3000

[packager]
language = "nodejs-npm"

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false